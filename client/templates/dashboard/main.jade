style#dashboardStyle {{css}}
.dashboard
  .row.spiel.switch-width
    .span8
      h1.name(contenteditable="true") {{name}}
    .span4.settings
      a(href="#", title="Adjust the width of the dashboard").btn.btn-primary#screenWidth
        i.fa.fa-arrows-h
      a(href="#", title="Change the style of the dashboard").btn.btn-primary#styleDashboard
        i.fa.fa-pencil-square-o
      a(href="{{dashboardUrl}}", target="_blank", title="Share your dashboard with a read-only link").btn.btn-primary#share
        i.fa.fa-external-link
      a(href="#", title="Delete the dashboard").btn.btn-danger#deleteDashboard
        i.fa.fa-trash-o
  .row.switch-width
    .span12#widgets(data-dashboardId="{{_id}}")
      | {{#widgets}}
      | {{> widget}}
      | {{/widgets}}