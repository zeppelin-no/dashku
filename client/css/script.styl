ul#files li
  list-style none
  display inline
  float left
  clear none
  text-align center
  
  a
    display block
    color #777
    border solid 1px #bbb
    width 110px
    min-height 150px
    padding 10px
    margin 5px
    round(10px)
    text-decoration none
    color white
    font-weight bold
    box-shadow inset 0 3px 14px 1px rgba(255,255,255,0.25)
    text-shadow 1px 1px 2px rgba(0,0,0,0.4)
  
    .imgContainer
      padding-top 20px
      height 70px

    .name
      padding-top 20px

ul#files li.ruby a
  background #BD0000

ul#files li.nodejs a
  background #46483E

ul#files li.php a
  background #669

ul#files li.python a
  background #e1e1e1
  color #333
  text-shadow 1px 1px 2px rgba(255,255,255,0.4)

ul#files li.email a
  padding-bottom none
  background #8EE000
  padding 40px 10px 20px 10px
  min-height 110px
  text-shadow 1px 1px 1px rgba(111,111,111,0.4)

ul#files li a:hover
  box-shadow inset 0 3px 14px 1px rgba(50,50,50,0.45)

